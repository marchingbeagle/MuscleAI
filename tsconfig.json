{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@clerk/clerk-expo": ["node_modules/@clerk/clerk-expo"],
      "expo-router": ["node_modules/expo-router"],
      "@prisma/react-native": ["node_modules/@prisma/react-native"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@clerk/clerk-expo/**/*",
    "node_modules/expo-router/**/*",
    "node_modules/@prisma/react-native/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
